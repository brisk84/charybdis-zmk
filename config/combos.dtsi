#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
    require-prior-idle-ms = <150>; \
  };

#define BASE 0

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 40
#define COMBO_TERM_BOOTLOADER 100

combos {
  compatible = "zmk,combos";

  COMBO(l_leftclick, &mkp LCLK, 16 17, BASE, COMBO_TERM_SLOW)
  COMBO(l_rightclick, &mkp RCLK, 17 18, BASE, COMBO_TERM_SLOW)
  COMBO(l_middleclick, &mkp MCLK, 16 18, BASE, COMBO_TERM_SLOW)

  COMBO(r_leftclick, &mkp LCLK, 12 13, BASE, COMBO_TERM_SLOW)
  COMBO(r_rightclick, &mkp RCLK, 11 12, BASE, COMBO_TERM_SLOW)
  COMBO(r_middleclick, &mkp MCLK, 11 13, BASE, COMBO_TERM_SLOW)

  COMBO(nav_bootloader, &bootloader, 23 24, 2, COMBO_TERM_BOOTLOADER)
  COMBO(num_bootloader, &bootloader, 25 26, 3, COMBO_TERM_BOOTLOADER)

  COMBO(nav_sysreset, &sys_reset, 3 4, 2, COMBO_TERM_BOOTLOADER)
  COMBO(num_sysreset, &sys_reset, 5 6, 3, COMBO_TERM_BOOTLOADER)
};
